{
  "manifest_version": 3,
  "name": "Auto Refresher",
  "version": "1.2",
  "description": "Auto refresh webpage if server error happens. It Refreshes every 2 seconds....",
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
